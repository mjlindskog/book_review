        </div>

        {{!-- Main content --}}

        <div class="col-7">

            {{!-- Post review --}}

            <div class="form-signin text-center">
                <h3 class="h3">What's your review?</h3>
                <form class="card-body" id="add-review-form">
                    <div class="form-floating mb-3">
                        <label for="book-title" class="form-label"></label>
                        <input type="text" id="book-title" name="book-title" class="form-input w-100" autofocus="true"
                            placeholder="Enter Book Title" />
                        <label for="book-author" class="form-label"></label>
                        <input type="text" id="book-author" name="book-author" class="form-input w-100" autofocus="true"
                            placeholder="Enter Book Author" />
                    </div>

                    <div class="form-floating mb-3">
                        <label class="form-label" for="content"></label>
                        <textarea id="content" name="review_content" class="form-input w-100" aria-label="With textarea"
                            autofocus="true" placeholder="Type your review here..."></textarea>
                    </div>

                    <button type="submit" class="w-50 btn btn-lg btn-info mb-3">Submit</button>
                </form>
            </div>

            {{!-- list items of reviews from people following / friends, will need to be dyanmically created --}}


            <article class="post">

                {{#each reviews as |review| }}
                {{> review-info review}}
                {{/each}}

            </article>

        </div>

